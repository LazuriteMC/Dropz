{
  "schemaVersion": 1,
  "id": "dropz",
  "version": "$version",
  "environment": "*",
  "entrypoints": {
    "main": [ "dev.lazurite.dropz.Dropz" ],
    "modmenu": [ "dev.lazurite.dropz.config.client.ModMenuCompat" ]
  },
  "mixins": [
    {
      "config": "dropz.common.mixins.json",
      "environment": "*"
    },
    {
      "config": "dropz.client.mixins.json",
      "environment": "client"
    }
  ],
  "depends": {
    "java": "$min_java_version",
    "minecraft": "$min_minecraft_version",
