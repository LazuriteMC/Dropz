    "rayon": "$min_rayon_version"
  },
  "name": "Dropz",
  "description": "Dynamic item drops for Fabric.",
  "authors": [ "The Lazurite Team" ],
  "contact": {
    "homepage": "https://lazurite.dev",
    "sources": "https://github.com/lazuritemc/dropz",
    "issues": "https://github.com/lazuritemc/dropz/issues"
  },
  "license": "MIT",
  "icon": "assets/dropz/icon.png",
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/NNPPHN7b3P"
      }
    }
  }
